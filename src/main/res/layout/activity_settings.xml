<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="#234459"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="Back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backArrow"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_bg"
            android:layout_marginLeft="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            tools:ignore="MissingClass"
            android:contentDescription="Profile Image" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_add_circle_24"
            app:tint="#234459"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-30dp"
            android:contentDescription="Add Profile Image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#234459"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#234459"
                android:hint="Enter your name"
                android:textColorHint="#888787"
                android:contentDescription="User Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="#234459"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/etStatus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#234459"
                android:textColorHint="#D1CDCD"
                android:hint="Enter your status"
                android:contentDescription="Status" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Save"
            android:layout_gravity="right"
            android:background="@drawable/savebg"
            android:textColor="#fff"
            android:contentDescription="Save Button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="15dp"
            app:drawableTint="#fff"
            android:padding="10dp"
            android:text="Privacy Policy"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/info"
            android:drawablePadding="15dp"
            app:drawableTint="#fff"
            android:padding="10dp"
            android:text="About Us"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/invite"
            android:drawablePadding="15dp"
            app:drawableTint="#fff"
            android:padding="10dp"
            android:text="Invite a Friend"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/notification"
            android:drawablePadding="15dp"
            app:drawableTint="#fff"
            android:padding="10dp"
            android:text="Notification"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableLeft="@drawable/question"
            android:drawablePadding="15dp"
            app:drawableTint="#fff"
            android:padding="10dp"
            android:text="Help"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
